    "l=[4,5,6,1,2,7,8,9]\n",
    "w=0\n",
    "\n",
    "def maxSum(sum,w,index,l):\n",
    "    if index>=len(l):\n",
    "        return 0\n",
    "    elif w==0:\n",
    "        return maxSum(1,index+1,l)\n",
    "    elif w>=4:\n",
    "        return maxSum(w+1,index+1,l)\n",
    "    sum=max(maxSum(w+1,index+1,l),maxSum(0,index+1,l))\n",
    "    return sum"
